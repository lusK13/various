block main
    form(action="", method="post")
        div
            label(for="title") Titre
            input(type="text" name="title" id="title" value=property.title)
        div
            label(for="type") Type
            input(type="text" name="type" id="type" value=property.type)
        div
            label(for="square") Surface
            input(type="number" name="square" id="square" value=property.square)
        div
