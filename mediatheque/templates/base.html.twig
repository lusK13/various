{% block html %}
    <html xmlns:hx="http://purl.org/NET/hinclude">
        <head>
            <meta charset="UTF-8">
            <title>{% block title %} Index {% endblock %}</title>
            {% block stylesheets %}
                <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
                <link href="{{ asset('css/normalize.css') }}" rel="stylesheet" />
                <link href="{{ asset('css/styleAdmin.css') }}" rel="stylesheet" />
            {% endblock %}
        </head>
        <body>
        {% block body %}
        {% block header %}
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
            <a class="navbar-brand" href="{{ path('index') }}">Media library</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('index') }}">Home <span class="sr-only">(current)</span></a>
                    </li>
                {% if app.user %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('member_edit', {'id': app.user.id }) }}">Profil <span class="sr-only"></span></a>
                    </li>
                {% endif %}
                </ul>
            </div>
                {% if app.user %}
                    <div class="mb-3 text-white">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% else %}
                <div class="mb-3 text-white">
                        <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                </div>
                {% endif %}
            </nav>
            
            {% endblock %}
            {% block main %}
            <div class="container-fluid offset-1 col-10">

            </div>
            {% endblock %}

            {% endblock %}
            {% block javascripts %}
                <script src="{{ asset('js/hinclude-1.2.0/hinclude.js') }}"></script>
                <script src="{{ asset('js/jquery-3.5.1.min.js') }}"></script>
                <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
            {% endblock %}
        </body>
    </html>
{% endblock %}
