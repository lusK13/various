{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Journal index{% endblock %}

{% block main %}
<div class="container-fluid offset-1 col-10">
    <h1 class="mb-3">Journal repertory</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Cote</th>
                <th>Format</th>
                <th>CodeOeuvre</th>
                <th>Periodicity</th>
                <th>SubscriptionDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for journal in journals %}
            <tr>
                <td>{{ journal.id }}</td>
                <td>{{ journal.title }}</td>
                <td>{{ journal.cote }}</td>
                <td>{{ journal.format }}</td>
                <td>{{ journal.codeOeuvre }}</td>
                <td>{{ journal.periodicity }}</td>
                <td>{{ journal.subscriptionDate ? journal.subscriptionDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('journal_show', {'id': journal.id}) }}">show</a>
                    <a href="{{ path('journal_edit', {'id': journal.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(journals) }}
    <a href="{{ path('journal_new') }}">Create new</a><br>

    <a href="{{ path('admin_index') }}">back to admin panel </a>
</div>
{% endblock %}
