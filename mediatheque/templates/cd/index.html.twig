{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}CD index{% endblock %}

{% block main %}
<div class="container-fluid offset-1 col-10">

    <h1 class="mb-3">CD repertory</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Cote</th>
                <th>Format</th>
                <th>CodeOeuvre</th>
                <th>Plages</th>
                <th>Duration</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cd in cds %}
            <tr>
                <td>{{ cd.id }}</td>
                <td>{{ cd.title }}</td>
                <td>{{ cd.cote }}</td>
                <td>{{ cd.format }}</td>
                <td>{{ cd.codeOeuvre }}</td>
                <td>{{ cd.plages }}</td>
                <td>{{ cd.duration ? cd.duration|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('cd_show', {'id': cd.id}) }}">show</a>
                    <a href="{{ path('cd_edit', {'id': cd.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(cds) }}
    <a href="{{ path('cd_new') }}">Create new</a><br>

    <a href="{{ path('admin_index') }}">back to admin panel </a>
</div>
{% endblock %}
