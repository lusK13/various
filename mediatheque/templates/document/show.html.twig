{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Document{% endblock %}

{% block main %}
<div class="container-fluid offset-1 col-10">

    <h1 class="mb-3">Document</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ document.title }}</td>
            </tr>
            <tr>
                <th>Cote</th>
                <td>{{ document.cote }}</td>
            </tr>
            <tr>
                <th>Format</th>
                <td>{{ document.format }}</td>
            </tr>
            <tr>
                <th>CodeOeuvre</th>
                <td>{{ document.codeOeuvre }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('document_index') }}">back to list</a>

{% endblock %}
