{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}MeetUp index{% endblock %}

{% block main %}
<div class="container-fluid offset-1 col-10">

    <h1 class="mb-3">MeetUp repertory</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Employ√©e</th>
                <th>Auteur</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for meet_up in meet_ups %}
            <tr>
                <td>{{ meet_up.id }}</td>
                <td>{{ meet_up.getEmployee }}</td>
                <td>{{ meet_up.getAuthor }}</td>
                <td>{{ meet_up.date ? meet_up.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('meet_up_show', {'id': meet_up.id}) }}">show</a>
                    <a href="{{ path('meet_up_edit', {'id': meet_up.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(meet_ups) }}
    <a href="{{ path('meet_up_new') }}">Create new</a><br>

    <a href="{{ path('admin_index') }}">back to admin panel </a>
</div>

{% endblock %}
