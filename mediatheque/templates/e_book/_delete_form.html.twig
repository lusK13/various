<form method="post" action="{{ path('e_book_delete', {'id': e_book.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ e_book.id) }}">
    <button type="button" class="btn btn-danger">Delete</button>
</form>
