{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}EBook index{% endblock %}

{% block main %}
<div class="container-fluid offset-1 col-10">

    <h1 class="mb-3">EBook repertory</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Cote</th>
                <th>Format</th>
                <th>CodeOeuvre</th>
                <th>Pages</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for e_book in e_books %}
            <tr>
                <td>{{ e_book.id }}</td>
                <td>{{ e_book.title }}</td>
                <td>{{ e_book.cote }}</td>
                <td>{{ e_book.format }}</td>
                <td>{{ e_book.codeOeuvre }}</td>
                <td>{{ e_book.pages }}</td>
                <td>
                    <a href="{{ path('e_book_show', {'id': e_book.id}) }}">show</a>
                    <a href="{{ path('e_book_edit', {'id': e_book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(e_books) }}
    <a href="{{ path('e_book_new') }}">Create new</a><br>

    <a href="{{ path('admin_index') }}">back to admin panel </a>
</div>
{% endblock %}
